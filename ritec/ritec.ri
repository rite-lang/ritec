pub import span
pub import parse
pub import diagnostic

import std:result:Result

fn main(args: [str])
  let sources = span:new_sources()
  let source = span:load_source("test/test.ri")?
  let sources, id = span:add_source(sources, source)

  match parse:lexer:lex(id, source.text)
  | Ok(stream) -> std:debug:print(stream)
  | Err(report) -> diagnostic:report:print(report, sources)

  Ok(void)
